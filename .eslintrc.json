{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "FunctionDeclaration": {
                    "parameters": "first"
                },
                "FunctionExpression": {
                    "parameters": "first"
                },
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-unused-vars": [
            "error",
            {
                "args": "after-used",
                "argsIgnorePattern": "^next$"
            }
        ],
        "comma-dangle": ["error", "always-multiline"],
        "arrow-parens": [
            2,
            "as-needed",
            {
                "requireForBlockBody": true
            }
        ],
        "eol-last": ["error", "always"],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0
            }
        ],
        "prefer-const": "error",
        "no-var": "error",
        "prefer-arrow-callback": ["error"],
        "object-curly-spacing": ["error", "always"],
        "camelcase": "error",
        "eqeqeq": "error",
        "no-console": "off",
        "no-control-regex": 0,
        "no-useless-escape": 0,
        "no-constant-condition": "off"
    }
}
